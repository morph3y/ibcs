@model Web.Models.LoginViewModel

@{
    ViewBag.ReturnUrl = Request["ReturnUrl"];
}

@section styles
{
    <link type="text/css" rel="stylesheet" href="~/Content/Profile.css"/>
}

<div class="profile">
@using (Html.BeginForm(null, null, new { ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="validation @(ViewData.ModelState.IsValid ? " " : "ui-state-error")">
        @Html.ValidationSummary(true)
    </div>
    <div class="field">
        <div class="label">
            @Html.LabelFor(x => x.UserName)
        </div>
        <div class="value">
            @Html.TextBoxFor(x => x.UserName)
        </div>
    </div>
    <div class="field">
        <div class="label">
            @Html.LabelFor(x => x.Password)
        </div>
        <div class="value">
            @Html.PasswordFor(x => x.Password) 
        </div>
    </div>
    
    <input type="submit" value="Login" />
}
</div>