@model Web.Models.RankingViewModel

@Html.ActionLink("Player Ranking", "AllPlayerRanks", new { area = "", controller = "Ranking" })
|
@Html.ActionLink("Team Ranking", "AllTeamRanks", new { area = "", controller = "Ranking" })
<br /><br />
<table class="rank-table fancy">
    <thead>
        <tr>
            <td>Position</td>
            <td>Name</td>
            <td>Elo</td>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Ranks.Count(); i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td class="name">
                    <div>@Model.Ranks[i].Subject.Name</div>
                </td>
                <td>@Model.Ranks[i].Elo</td>
            </tr>
        }
    </tbody>
</table>
